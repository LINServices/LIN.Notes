@page "/home"
@inject NavigationManager NavigationManager



@* Pantalla *@
<div class="UIScroll flex w-full justify-center overflow-y-auto overflow-x-hidden">
    <div class="flex h-full w-full flex-grow flex-col px-4 pt-9 lg:px-10">

        <!--TITULOS-->
        <label class="text-8xl font-bold text-zinc-900 dark:text-white">Mis</label>
        <label class="text-7xl font-medium text-zinc-800 dark:text-zinc-300">Notas</label>

        <div class="mt-3">
            <div class="bg-yellow-400/30 flex w-max items-center gap-1 rounded-full pr-4 dark:bg-yellow-500/20">

                @* Obtener la imagen de perfil. *@
                @{
                    string url = $"data:image/png;base64,{Convert.ToBase64String(LIN.Access.Notes.Session.Instance.Account.Profile)}";
                }

                @* Perfil. *@
                @if (LIN.Access.Notes.Session.Instance.Account.Profile.Length <= 0)
                {

                    <div @onclick="CloseSession" class="relative inline-flex h-10 w-10 items-center justify-center overflow-hidden rounded-full bg-gray-100 dark:bg-zinc-800">
                        <span class="text-sm text-gray-600 dark:text-gray-300">@(Global.Utilities.Strings.GetInitials(LIN.Access.Notes.Session.Instance.Account.Name))</span>
                    </div>
                }
                else
                {
                    <img @onclick="CloseSession" class="h-10 w-10 rounded-full" src="@url" alt="Rounded avatar">
                }

                <label class="font-medium text-zinc-900 dark:text-zinc-300">Alex</label>
            </div>
        </div>

        <!--Botones-->
        <div class="mt-5 flex w-full gap-3">
            <div class="border-2 w-max rounded-2xl border-current-500 bg-current-500 px-4 py-2 text-zinc-50">
                <label>Todas</label>
            </div>

            <div class="border-2 w-max rounded-2xl border-zinc-400 px-4 py-2 text-zinc-400">
                <label>Importante</label>
            </div>

            <div class="border-2 w-max rounded-2xl border-zinc-400 px-4 py-2 text-zinc-400">
                <label>To-do</label>
            </div>
        </div>

        <!--Notas-->
        <div class="grid-cols-2 mt-5 grid gap-3 pb-5 md:grid-cols-4">



            @if (Notas == null)
            {
                <LIN.Notes.Components.Elements.Loader></LIN.Notes.Components.Elements.Loader>
            }
            else
            {
                
                @if (Notas.Response != Responses.Success)
                {
                    <label>Error</label>
                }
                else
                {

                    @foreach(var e in Notas.Models)
                    {
                        <LIN.Notes.Components.Shared.NoteControl Note="e" OnClick="Go" />
                    }
                    
                }

            }

        </div>




    </div>

</div>








<LIN.Notes.Components.Elements.BottomNavigation OnClick="Open"></LIN.Notes.Components.Elements.BottomNavigation>


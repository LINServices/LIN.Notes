@inject IJSRuntime Js

@* Elemento *@
<div id="popup-modal-@Key" tabindex="-1" class="h-[calc(100%-1rem)] fixed left-0 right-0 top-0 z-50 hidden max-h-full w-full items-center justify-center overflow-y-auto overflow-x-hidden backdrop-blur md:inset-0">
    <div class="relative max-h-full w-full max-w-md px-4 py-8">
        <div class="bg-white/60 relative rounded-xl py-3 shadow-sm backdrop-blur-xl dark:bg-white/40">
            <button id="btn-close-@Key" type="button" class="absolute end-2.5 top-3 ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg bg-transparent text-sm text-gray-400 hover:bg-zinc-200 hover:text-gray-900 dark:hover:bg-zinc-600 dark:hover:text-white" data-modal-hide="popup-modal">
                <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
            </button>
            <div class="p-4 text-center md:p-5">
                <svg class="mx-auto mb-4 h-12 w-12 text-gray-400 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
                <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-200">@Content</h3>
                
                <div class="flex w-full gap-2">
                    <button @onclick="OnAccept" id="btn-accept-@Key" type="button" class="w-full items-center rounded-xl bg-red-600 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800">
                        Si, estoy seguro
                    </button>
                    <button @onclick="OnCancel" id="btn-cancel-@Key" type="button" class="w-full rounded-xl border border-zinc-200 bg-white px-5 py-2.5 text-sm font-medium text-gray-900 hover:bg-gray-100 hover:text-current-500 focus:outline-none focus:z-10 focus:ring-4 focus:ring-zinc-100 dark:bg-zinc-800 dark:text-gray-400 dark:border-zinc-600 dark:focus:ring-zinc-700 dark:hover:text-white dark:hover:bg-zinc-700">No, cancelar</button>

                </div>
                
                 </div>
        </div>
    </div>
</div>
